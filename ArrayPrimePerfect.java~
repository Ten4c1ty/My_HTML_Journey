import java.util.Scanner;
public class ArrayPrimePerfect{
    public static void main(String [] args){
        Scanner sc = new Scanner(System.in);
        System.out.println("Please enter the length of an array: ");
        int N = sc.nextInt();
        int [] array = new int [N];
        int counter = 0;
        int sum = 0;
        for(int i = 0; i < N; i++){
            System.out.println("Please enter the element number "+i+" : ");
            array[i] = sc.nextInt();
            for(int j = 2; j < array[i]; j++){
                if(array[i]%j == 0){
                    counter++;
                    sum += j;
                }
            }
            if(counter == 0){
                System.out.println(i+":"+array[i]);
                counter = 0;
            }
            if((sum+1)==array[i]){
                System.out.println(i+":"+array[i]);
                sum = 0;
            }
        }
    }
}