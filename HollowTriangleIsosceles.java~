import java.util.Scanner;
public class HollowTriangleIsosceles{
    public static void main(String [] args){
        Scanner sc = new Scanner(System.in);
        System.out.println("Please enter the height of the triangle: ");
        int H = sc.nextInt();
        for(int i = 1; i <= H; i++){
            for(int j = 1; j<H; j++){
                System.out.print(" ");
            }
            for(int k = 1; k <= (2*i-1); k++){
                if(k == 1 || k == i){
                    System.out.print(k);
                }
                //else{
                else if(k > 1 && k < i){
                    System.out.print(" ");
                }
            }
            System.out.println();
        }
    }
}