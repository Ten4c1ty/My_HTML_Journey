import java.util.Scanner;
public class RhombusIncomplete{
    public static void main(String [] args){
        Scanner sc = new Scanner(System.in);
        System.out.println("Please enter the length of one side of a rhombus: ");
        int length = sc.nextInt();
        for(int i = 1; i<=length; i++){
            for(int j = 1; j<=(length-i); j++){
                System.out.print(" ");
            }
            for(int k = 1; k<=(2*i-1); k++){
                System.out.print(k);
            }
            System.out.println();
        }
        for(int m = length+1; m<=(2*length-1); m++){
            for(int n = 1; n<=(m-length); n++){
                System.out.print(" ");
            }
            /*for(int p = 1; p<=; p++){
                System.out.print(p);
            }*/
            System.out.println();
        }
    }
}