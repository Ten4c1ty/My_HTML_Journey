import java.util.Scanner;
public class Task03{
    public static void main(String [] args){
        Scanner sc = new Scanner(System.in);
        System.out.println("Please enter an integer: ");
        int integer = sc.nextInt();
        int counter = 0;
        for(i=1; i<=integer; integer++){
            System.out.println("Please enter number "+integer+": ");
            int number = sc.nextInt();
            if(number > 0){
                int counter=0;
                int nonnegative = counter++;
                System.out.println(nonnegative+" Non-negative Numbers");
            }
            else if(number<0){
                int counter=0;
                int negative = counter++;
                System.out.println(negative+" Negative Numbers");
            }
        }