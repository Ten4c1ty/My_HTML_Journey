import java.util.*;
public class ShortestIncreasingPath{
    public static void main(String [] args){
        Scanner sc = new Scanner(System.in);
        long t = sc.nextLong();
        while(--t >= 0){
            long x = sc.nextLong();
            long y = sc.nextLong();
            long total = 0;
            if(x == y){
                System.out.println(-1);
            }
            else{
                for(long count = 1; x,y <= 0; count++){
                    if(count%2 != 0){
                        x = x-count;
                    }
                    else{
                        y = y-count;
                    }
                    total++;
                }
                System.out.println(total);
            }
        }
    }
}