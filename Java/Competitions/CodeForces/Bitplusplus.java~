import java.util.*;
public class Bitplusplus{
    public static void main(String [] args){
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int X = 0;
        if((1 <= n) && (n <= 150)){
            for(int a = 0; a < n; a++){
                if(a%2 == 0){
                    if(a == 0){
                        ++X;
                    }
                    else{
                        X++;
                    }
                }
                else{
                    --X;
                }
            }
            System.out.println(X);
        }
    }
}