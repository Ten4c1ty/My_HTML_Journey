import java.util.*;
public class WeirdAlgorithm{
    public static void main(String [] args){
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        if((1 <= n) && (n <= Math.pow(10, 6))){
            int a = n;
            System.out.print(a+" ");
            while(a > 1){
                if(a%2 == 0){
                    a /= 2;
                    System.out.print(a + " ");
                }
                else{
                    a = (a*3)+1;
                    System.out.print(a + " ");
                }
            }
        }
    }
}