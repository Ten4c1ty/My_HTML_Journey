import java.util.*;
public class Permutations{
    public static void main(String [] args){
        Scanner sc = new Scanner(System.in);
        long n = sc.nextLong();
        long a = n;
        if((1 <= n) && (n <= Math.pow(10, 6))){
            if(n%2 == 0){
                while(a > 0){
                    if(n/2 == a){
                        System.out.print(" "+a);
                    }
                    else if(a%2 == 0){
                        System.out.print(" "+a);
                    }
                    else{
                        System.out.print(" "+a);
                    }
                    --a;
                }
            }
            else{
                while(a > 0){
                    if(((n/2)+1) == a){
                        System.out.print(" "+a);
                    }
                    else if(a%2 == 0){
                        System.out.print(" "+a);
                    }
                    else{
                        System.out.print(" "+a);
                    }
                    --a;
                }
            }
        }
    }
}