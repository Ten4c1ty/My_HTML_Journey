import java.util.Scanner;
public class AlternatingString{
    public static void main(String [] args){
        Scanner sc = new Scanner(System.in);
        System.out.println("Please enter any sentence: ");
        String words = sc.nextLine();
        boolean flag = true;
        String new_word = "";
        for(int i = 0; i < words.length(); i++){
            int convert =  (int) words.charAt(i);
            if((convert >= 65 && convert <= 90) || (convert >= 97 && convert <= 122)){
                if(flag){
                    if(convert >= 65 && convert <= 90){
                        convert += 32;
                    }
                    char ch = (char) convert;
                    new_word += ch;
                    flag = false;
                }
                else if(!flag){
                    if(convert >= 97 && convert <= 122){
                        convert -= 32;
                    }
                    char ch = (char) convert;
                    new_word += ch;
                    flag = true;
                }
            }
        }
        System.out.println("The output is "+new_word+" .");
    }
}